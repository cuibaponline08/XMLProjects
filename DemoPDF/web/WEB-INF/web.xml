<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ConvertPDFServlet</servlet-name>
        <servlet-class>sample.pdf.ConvertPDFServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CombineFOwithXSL</servlet-name>
        <servlet-class>sample.pdf.CombineFOwithXSL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConvertPDFServlet</servlet-name>
        <url-pattern>/ConvertPDFServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CombineFOwithXSL</servlet-name>
        <url-pattern>/CombineFOwithXSL</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>CombineFOwithXSL</welcome-file>
    </welcome-file-list>
</web-app>
